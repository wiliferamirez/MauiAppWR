<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:MauiAppWR.Models"
             x:Class="MauiAppWR.Views.AboutPage"
             Title="AboutPage"
             x:DataType="models:About">
    <ContentPage.BindingContext>
        <models:About />
    </ContentPage.BindingContext>
    <VerticalStackLayout Padding="30">
        <Label Text="William Ramírez" FontSize="24" HorizontalOptions="Center" />
        <Image Source="icon.png" HeightRequest="100" WidthRequest="100" HorizontalOptions="Center"/>
        <Label Text="Soy estudiante de Ingeniería en Software" 
               FontSize="18" TextColor="Gray" HorizontalOptions="Center" />
    </VerticalStackLayout>

</ContentPage>