<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:MauiAppWR.ViewModels"
             x:Class="MauiAppWR.Views.WeatherPage"
             Title="Clima Actual">

    <ContentPage.BindingContext>
        <viewmodels:WeatherViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="16">

            <Button Text="Actualizar Clima" Command="{Binding LoadWeatherAsyncCommand}" />

            <Label Text="Hora:" FontAttributes="Bold" />
            <Label Text="{Binding Clima.Time, StringFormat='{0:dd/MM/yyyy HH:mm}'}" />

            <Label Text="Temperatura:" FontAttributes="Bold" />
            <Label Text="{Binding Clima.Temperature, StringFormat='{0} Â°C'}" />

            <Label Text="Humedad:" FontAttributes="Bold" />
            <Label Text="{Binding Clima.Humidity, StringFormat='{0}%'}" />

            <Label Text="Lluvia:" FontAttributes="Bold" />
            <Label Text="{Binding Clima.Rain, StringFormat='{0} mm'}" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
